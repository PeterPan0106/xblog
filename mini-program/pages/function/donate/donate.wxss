  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 20rpx;
}
.pay .choose{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.pay .choose image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 5rpx;
}
