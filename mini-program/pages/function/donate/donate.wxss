}


.choose .choose-img{
  border: 1px solid #dedede;
  border-radius: 25rpx;
}
.paycode{
  display: flex;
  justify-items: center;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.say{
  padding: 20rpx;
}
