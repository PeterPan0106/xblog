<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.xiaoyou.library.net.entity.response.AnimationDetail" />
    </data>

    <LinearLayout
        android:padding="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            fresco:roundedCornerRadius="5dp"
            android:id="@+id/animationCover"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_160"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/Black"
                android:textSize="@dimen/sp_18"
                android:text="@{item.title}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/animationDec"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text"
                android:layout_marginEnd="@dimen/dp_10"
                android:scrollbars="vertical"
                android:text="@{item.dec}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="?colorPrimary"
                    android:text="@string/clickPlay"
                    android:id="@+id/playAnimation"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_time"
                    android:text="@{item.total+'('+item.current+')'}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>